<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/bg_welcome_movies"
        android:scaleType="centerCrop"
        android:alpha="0.5" /> 
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottom"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="120dp"
            android:paddingBottom="40dp">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_vltv_plus"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Os melhores conteúdos em um único lugar."
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:letterSpacing="0.05"/>

            <Space android:layout_width="match_parent" android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISPONÍVEL NO VLTV+"
                android:textColor="#555555"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_channel_tag"
                        android:gravity="center"
                        android:text="HBO"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_channel_tag"
                        android:gravity="center"
                        android:text="TELECINE"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_channel_tag"
                        android:gravity="center"
                        android:text="PREMIERE"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_channel_tag"
                        android:gravity="center"
                        android:text="SporTV"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_channel_tag"
                        android:gravity="center"
                        android:text="COMBATE"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="24dp"
        android:background="#141414">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_blue"
            android:text="COMEÇAR"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:focusable="true" />
    </LinearLayout>

</RelativeLayout>
