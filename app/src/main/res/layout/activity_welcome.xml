<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnStartContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#000000">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:alpha="0.7"/>
                
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:alpha="0.5"/>
                    
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:alpha="0.7"/>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/gradient_fade_black" />

            <Space android:layout_width="match_parent" android:layout_height="30dp" />

            <ImageView
                android:id="@+id/imgAppLogo"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" 
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="VLTV+"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Os melhores conteúdos em um único lugar."
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <Space android:layout_width="match_parent" android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISPONÍVEL NO VLTV+"
                android:textColor="#555555"
                android:textSize="10sp"
                android:letterSpacing="0.15"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp">

                    <ImageView android:layout_width="50dp" android:layout_height="30dp" android:src="@mipmap/ic_launcher" android:layout_marginEnd="20dp" android:alpha="0.8"/>
                    <ImageView android:layout_width="50dp" android:layout_height="30dp" android:src="@mipmap/ic_launcher" android:layout_marginEnd="20dp" android:alpha="0.8"/>
                    <ImageView android:layout_width="50dp" android:layout_height="30dp" android:src="@mipmap/ic_launcher" android:layout_marginEnd="20dp" android:alpha="0.8"/>
                    <ImageView android:layout_width="50dp" android:layout_height="30dp" android:src="@mipmap/ic_launcher" android:layout_marginEnd="20dp" android:alpha="0.8"/>
                    <ImageView android:layout_width="50dp" android:layout_height="30dp" android:src="@mipmap/ic_launcher" android:layout_marginEnd="20dp" android:alpha="0.8"/>
                    
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btnStartContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="24dp"
        android:background="#141414">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#0072D2"
            android:text="COMEÇAR"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
            </LinearLayout>

</RelativeLayout>
